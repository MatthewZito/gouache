{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "WebWorker"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // @see https://github.com/vuejs/core/issues/4668
    "noUnusedLocals": false,
    "allowJs":  true,
    "forceConsistentCasingInFileNames": true,
		"noEmit": true,
    "types": [
      "vite/client",
			"node"
    ],
		"typeRoots": ["src/types/**/*.d.ts","node_modules/@types"],
		"jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    }
  },
	"include": ["src", "test", "*.ts"]
}
